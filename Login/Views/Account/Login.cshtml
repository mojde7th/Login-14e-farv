
@{
    ViewBag.Title = "صفحه ورود";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h1 style="color:white">صفحه ورود </h1>
<div class="clear-loading spinner">
    <span></span>
</div>
<div class="w3ls-login box box--big" style="text-align:right">
    <!-- form starts here -->
    <form action="verify" method="post">
        <div class="agile-field-txt" style="float:right" >
            <label> نام کاربری <i class="fa fa-user" aria-hidden="true"></i>  </label>
            <input type="text" name="Username" placeholder="نام کاربری" required="" />
        </div>
        <div class="agile-field-txt">
            <label> رمز عبور <i class="fa fa-unlock-alt" aria-hidden="true"></i>  </label>
            <input type="password" name="Pass" placeholder="رمز عبور" required="" id="myInput" />
            <div class="agile_label" style="float:left">
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">نمایش رمز عبور</label>
            </div>
        </div>
        <script>
				function myFunction() {
					var x = document.getElementById("myInput");
					if (x.type === "password") {
						x.type = "text";
					} else {
						x.type = "password";
					}
				}
        </script>
        <input type="submit" value="ورود">
    </form>
</div>
